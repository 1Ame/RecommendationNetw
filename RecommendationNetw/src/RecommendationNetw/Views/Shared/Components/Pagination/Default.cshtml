@model RecommendationNetw.Helpers.PagingInfo

@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a asp-action="@ViewBag.Action">First</a>
            </li>
            <li>
                <a asp-action="@ViewBag.Action" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <a asp-action="@ViewBag.Action" asp-route-page="@page">@page</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a asp-action="@ViewBag.Action" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li>
                <a asp-action="@ViewBag.Action" asp-route-page="@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
}

