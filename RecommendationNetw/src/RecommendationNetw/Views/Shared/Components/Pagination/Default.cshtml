@model RecommendationNetw.Helpers.PagingInfo

@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a asp-action="@ViewBag.AjaxAction" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@ViewBag.ReplaceId">First</a>
            </li>
            <li>
                <a asp-action="@ViewBag.AjaxAction" asp-route-page="@(Model.CurrentPage - 1)" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@ViewBag.ReplaceId">Previous</a>
            </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <a asp-action="@ViewBag.AjaxAction" asp-route-page="@page" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@ViewBag.ReplaceId">@page</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a asp-action="@ViewBag.AjaxAction" asp-route-page="@(Model.CurrentPage + 1)" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@ViewBag.ReplaceId">Next</a>
            </li>
            <li>
                <a asp-action="@ViewBag.AjaxAction" asp-route-page="@(Model.TotalPages)" data-ajax="true" data-ajax-mode="replace" data-ajax-update="@ViewBag.ReplaceId">Last</a>
            </li>
        }
    </ul>
}

