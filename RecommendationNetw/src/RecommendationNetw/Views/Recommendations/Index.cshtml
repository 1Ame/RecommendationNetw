@model RecommendationNetw.ViewModels.Recommendations.ListViewModel


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (TempData["opertionResult"] != null)
{
    <h3></h3>
}
<p>
    <a asp-action="Create">Create New</a>
</p>

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<table class="table content" id="content">
    <tr>
        <th>
            Name
        </th>
        <th>
            Short description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <label class="control-label">@item.Title</label>
            </td>
            <td>
                <label class="control-label">@item.ShortDescription</label>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="deleteButton">Delete</a>
            </td>
        </tr>
    }
</table>
@Component.Invoke("Pagination", "Index", Model.PagingInfo)

    

